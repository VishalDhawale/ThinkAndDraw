<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hint_gray_light"

    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/ll_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#ff7d7b7b"
        android:gravity="center">

        <com.example.thinkanddraw.custom_view.MyFreeDrwable
            android:id="@+id/my_image_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.example.thinkanddraw.custom_view.MyFreeDrwable>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_paint_r_edited_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/cream"
            android:text="R"
            android:textColor="#ffff0000" />

        <Button
            android:id="@+id/btn_paint_g_edited_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/cream"
            android:text="G"
            android:textColor="#ff00ff00" />

        <Button
            android:id="@+id/btn_paint_b_edited_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/cream"
            android:text="B"
            android:textColor="#ff0000ff" />

        <Button
            android:id="@+id/btn_capture_edited_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/blue_base"
            android:text="save"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_undo_edited_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/blue_base"
            android:text="Undo"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
